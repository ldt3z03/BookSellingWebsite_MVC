@model IEnumerable<Voucher>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Voucher List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Voucher" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>Create New Voucher
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Code
                    </th>
                    <th>
                        Description
                    </th>
                    <th>DiscountAmount</th>
                    <th>ExpiryDate</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var voucher in Model)
                {
                    <tr>
                        <td>@voucher.Code</td>
                        <td>@voucher.Description</td>
                        <td>@voucher.DiscountAmount</td>
                        <td>@voucher.ExpiryDate</td>
                        <td>
                            <a asp-controller="Voucher" asp-action="Edit" asp-route-id="@voucher.Id" class="btn btn-primary">Edit</a>
                            <form asp-controller="Voucher" asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@voucher.Id" />
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this voucher?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
